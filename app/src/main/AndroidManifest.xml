<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="io.taggled"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="io.taggled.permission.C2D_MESSAGE"/>
    <uses-permission android:name="android.permission.NFC"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PayActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".TaggleFriendsActivity"
            android:label="TAGGLE FRIENDS ACTIVITY"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NfcActivity"
            android:label="@string/title_activity_nfc"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="@string/mime_type"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CampaignActivity"
            android:label="@string/title_activity_campaign"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CampaignDetailActivity"
            android:label="@string/title_activity_campaign_detail"
            android:parentActivityName=".CampaignActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.taggled.CampaignActivity" />
        </activity>
    </application>

</manifest>
