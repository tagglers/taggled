<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="15dp"
    android:id="@+id/cv_campaign_updates">
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="2"
        app:columnCount="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            android:id="@+id/tv_update_name"
            android:text="Drinking Water in Africa Drinking Water in Africa Drinking Water in Africa Drinking Water in Africa Drinking Water in Africa Drinking Water in Africa"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2"
            android:text="SHARE"
            android:id="@+id/tv_update_share"
            android:gravity="left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="right"
            android:id="@+id/tv_update_date"
            android:text="12th November 2015"/>
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>
