<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        app:rowCount="7"
        app:columnCount="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            app:layout_row="0"
            android:id="@+id/tv_campaign_d_name"
            android:text="Drinking Water in Africa"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Large"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnSpan="2"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/tv_campaign_taggle_amount1"
            android:text="$0"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            app:layout_row="2"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/tv_campaign_taggle_nos"
            android:text="0"
            android:gravity="center"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/colorPrimary"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_column="0"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Target Amount"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="4"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/tv_campaign_d_amount"
            android:text="$40000"
            android:gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_column="0"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Last Date"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_row="5"
            app:layout_columnWeight="1"
            android:gravity="right"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/tv_campaign_end_date"
            android:text="12th Nov 2015"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/can_taggle"
            android:id="@+id/textView2"
            app:layout_row="6"
            app:layout_column="0"
            app:layout_columnSpan="2"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical|center_horizontal"
            android:foreground="@android:color/white"/>


    </android.support.v7.widget.GridLayout>


<!--</LinearLayout>-->
</ScrollView>