<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/activity_vertical_margin"
    android:id="@+id/cv_campaign_images">


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            app:columnCount="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:id="@+id/img_campaign"
                android:src="@drawable/africa_drinking"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowSpan="2"
                android:id="@+id/tv_update_name"
                android:text="Drinking Water in Africa :)"
                android:padding="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@android:style/TextAppearance.Large"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowSpan="2"
                android:text="12th November 2015"
                android:id="@+id/tv_update_share"
                android:gravity="left"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:gravity="right"
                android:id="@+id/tv_update_date"
                android:text="SHARE"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/colorAccent"/>
        </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>
